{erl_opts, [debug_info, {no_auto_import, [{link, 1}]}]}.

{lfe_first_files, ["src/xmplr-util.lfe",
                   "src/xmplr.lfe",
                   "src/exemplar.lfe",
                   "src/exemplar-xml.lfe",
                   "src/exemplar-html.lfe"]}.

{deps, [
   {lutil, {git, "https://github.com/lfex/lutil.git", {branch, "release/0.11.x"}}}
  ]}.

{deps, [
   {lfe, {git, "https://github.com/rvirding/lfe.git", {branch, "develop"}}}
  ]}.

{plugins, [
   {rebar3_lfe, {git, "https://github.com/lfe-rebar3/rebar3_lfe.git", {branch, "feature/ltest-support"}}}
]}.

{provider_hooks, [
   {pre, [{compile, {lfe, compile}}]}
]}.

{profiles, [
   {test, [
     {deps, [
        {ltest, {git, "https://github.com/lfex/ltest.git", {branch, "release/0.11.x"}}}]},
     {eunit_opts, [verbose]},
     {erl_opts, [{src_dirs, ["src", "test"]}]}
    ]}
  ]}.
